<DirectionInformation>
    canvas:
        Color:
            rgba: 204/255, 204/255, 204/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    MDSpinner:
        id: spinner
        size_hint: None, None
        size: dp(46), dp(46)
        pos_hint: {'center_x': .5, 'center_y': .5}
        active: True
        color: 0, 0, 0, 1

<Content>
    cols: 2
    size_hint_y: None
    height: self.minimum_height


    MDList:
        size_hint: 0.5, None
        height: self.minimum_height
        id: list1

    MDList:
        size_hint: 0.5, None
        height: self.minimum_height
        id: list2
