<Home>
    canvas:
        Color:
            rgba: 21/255, 20/255, 25/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        rows: 2

        MDLabel:
            text: "Изберете линия"
            font_style: "H3"
            color: "lightgrey"
            halign: "center"

        BoxLayout:
            orientation: "vertical"
            spacing: dp(30)
            MDRoundFlatButton:
                text: "M1-M2"
                font_style: "H6"
                text_color: "lightgrey"
                line_color: [0.8, 0.8, 0.8, 1]
                padding: dp(20), dp(20)
                size_hint_x: 0.3
                pos_hint: {"center_x": 0.5}
                on_release: app.change_transition_direction("left"); app.root.current = "m1-m2"
            MDRoundFlatButton:
                text: "M3"
                font_style: "H6"
                text_color: "lightgrey"
                padding: dp(20), dp(20)
                size_hint_x: 0.3
                line_color: [0.8, 0.8, 0.8, 1]
                pos_hint: {"center_x": 0.5}
                on_release: app.change_transition_direction("left"); app.root.current = "m3"
            Widget:


<DirectionInformation>
    canvas:
        Color:
            rgba: 204/255, 204/255, 204/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    MDSpinner:
        id: spinner
        size_hint: None, None
        size: dp(46), dp(46)
        pos_hint: {'center_x': .5, 'center_y': .5}
        active: True
        color: 0, 0, 0, 1

<Content>
    cols: 2
    size_hint: 1, None
    height: self.minimum_height


    MDList:
        size_hint: 0.5, None
        height: self.minimum_height
        id: list1

    MDList:
        size_hint: 0.5, None
        height: self.minimum_height
        id: list2


<Line>
    canvas:
        Color:
            rgba: 21/255, 20/255, 25/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        GridLayout:
            id: directions
            size_hint_y: None
            cols: 1
            spacing: 0, 10
            padding: root.width // 2 - dp(150), dp(100)

        Widget:





    MDIconButton:
        icon: "arrow-left"
        icon_size: "35sp"
        theme_text_color: "Custom"
        text_color: "lightgrey"
        on_press: app.change_transition_direction("right"); app.root.current = 'home'; root.reset()
