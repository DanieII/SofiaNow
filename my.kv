<Home>
    canvas:
        Color:
            rgba: 21/255, 20/255, 25/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        rows: 2

        MDLabel:
            text: "Choose a Line"
            font_style: "H3"
            color: "lightgrey"
            halign: "center"

        BoxLayout:
            orientation: "vertical"
            spacing: 20
            padding: 0, dp(-40), 0, dp(210)
            MDRoundFlatButton:
                text: "M1-M2"
                font_style: "H6"
                text_color: "lightgrey"
                size_hint: (0.5, 0.2)
                line_color: [0.8, 0.8, 0.8, 1]
                pos_hint: {"center_x": 0.5}
                on_release: app.change_transition_direction("left"); app.root.current = "m1-m2"
            MDRoundFlatButton:
                text: "M3"
                font_style: "H6"
                size_hint: (0.5, 0.2)
                text_color: "lightgrey"
                line_color: [0.8, 0.8, 0.8, 1]
                pos_hint: {"center_x": 0.5}
                on_release: app.change_transition_direction("left"); app.root.current = "m3"


<DirectionInformation>
    canvas:
        Color:
            rgba: 204/255, 204/255, 204/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Content>
    size_hint: 1, None
    orientation: "vertical"

    Button:
        text: "button"

<Line>
    canvas:
        Color:
            rgba: 21/255, 20/255, 25/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        ScrollView:
            do_scroll_x: False
            size_hint: (0.6, 0.7)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            GridLayout:
                id: directions
                size_hint: None, None
                size: root.width, root.height
                cols: 1
                spacing: 0, 10

    MDIconButton:
        icon: "arrow-left"
        icon_size: "35sp"
        theme_text_color: "Custom"
        text_color: "lightgrey"
        on_press: app.change_transition_direction("right"); app.root.current = 'home'; root.reset()
